    <preference name="WKWebViewOnly" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="phonegap-version" value="cli-9.0.0" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="android-targetSdkVersion" value="28" />

    <engine name="android" spec="^9.0.0" />
    <engine name="ios" spec="^5.0.1" />

    <plugin name="cordova-plugin-statusbar" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.3" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.0" />
    <plugin name="com-sarriaroman-photoviewer" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-device" />

    <edit-config file="*-Info.plist" mode="overwrite" target="NSPhotoLibraryUsageDescription">
        <string>Se accede a la Librería de Imágenes con la finalidad de enviar imágenes  desde el dispositivo al servidor de la aplicación. De ese modo el usuario podrá disponer de sus imágenes en cualquier dispositivo desde el que se conecte a su cuenta.</string>
    </edit-config>

    <edit-config file="*-Info.plist" mode="overwrite" target="NSCameraUsageDescription">
        <string>Se accede a la Cámara con la finalidad de capturar y enviar imágenes  desde el dispositivo al servidor de la aplicación. De ese modo el usuario podrá disponer de sus imágenes en cualquier dispositivo desde el que se conecte a su cuenta.</string>
    </edit-config>
</widget>
