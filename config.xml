<?xml version='1.0' encoding='utf-8'?>
<widget id="es.patbook.app.premium" version="1.0.131" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Patbook Premium</name>
    <description />
    <author email="info@pat-book.com" href="http://www.pat-book.com">El Artesano de Ideas</author>
    <content src="index.html" />
    <access origin="*" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

